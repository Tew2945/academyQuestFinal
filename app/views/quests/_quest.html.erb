<div id="<%= dom_id quest %>" class="w-full sm:w-auto my-5 space-y-5">
    <%= form_with(model: quest, local: false, class: "contents") do |form| %>
      <%= form.check_box :status, 
          class: "h-5 w-5 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer",
          onchange: "this.form.requestSubmit()",
          "data-testid": "todo-checkbox" %>
    <% end %>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= quest.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= quest.status? ? "Yes" : "No" %>
  </div>
</div>
