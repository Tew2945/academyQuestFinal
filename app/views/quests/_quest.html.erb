<div id="quest_<%= quest.id %>" class="flex flex-row justify-between items-center bg-white p-4 rounded-lg shadow-sm" data-testid="quest-item">
  <div>
      <%= form_with(model: quest, local: false, class: "contents") do |form| %>
        <%= form.check_box :status, 
            class: "h-5 w-5 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer",
            onchange: "this.form.requestSubmit()",
            "data-testid": "quest-checkbox" %>
      <% end %>

  </div>
      <div class="<%= quest.status? ? 'line-through text-gray-500' : 'text-gray-900' %> transition-all duration-200 text-lg font-medium ml-4" data-testid="quest-name">
      <%= quest.name %>
    </div>
  <div>
    <%= button_to "Delete", quest, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { testid: "delete-quest-btn"}  %>
  </div>
</div>
