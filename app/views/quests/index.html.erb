<% content_for :title, "Quests" %>

<div class="w-full">
  <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-2xl p-6 md:p-8 mb-8 shadow-lg border border-blue-200/50">
    <div class="flex flex-col items-center text-center space-y-6">
      
      <!-- Profile Image -->
      <div class="relative">
        <div class="w-24 h-24 md:w-28 md:h-28 rounded-full overflow-hidden ring-4 ring-white shadow-xl">
          <%= image_tag "IMG_1451.JPG",
            class: "w-full h-full object-cover object-center" %>
        </div>
        <!-- Decorative element -->
        <div class="absolute -top-2 -right-2 w-8 h-8 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full flex items-center justify-center shadow-lg">
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>

      <!-- Profile Info -->
      <div class="space-y-3">
        <h2 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
          Teeratorn Thiengtham 
          <span class="text-blue-600 font-semibold">(Tew)</span>
        </h2>
        <p class="text-gray-600 text-sm md:text-base max-w-2xl leading-relaxed">
          This website is my personal quest tracker for the ODTS Academy. Here you can see my progress, add new quests, and brag about my achievements!
        </p>
      </div>

      <!-- Action Button -->
      <div class="pt-2">
        <%= link_to brag_path, 
            class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl focus:outline-none focus:ring-4 focus:ring-blue-300", 
            "data-testid": "my-brags-btn" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          My Brags
        <% end %>
      </div>

    </div>
  </div>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <!-- Title Section -->
  <div class="text-center mb-8">
    <h1 class="text-3xl md:text-5xl font-bold bg-gradient-to-r from-gray-800 to-blue-600 bg-clip-text text-transparent">
      Tew's Quests
    </h1>
    <p class="text-gray-600 text-lg mt-2">
      Track your progress and celebrate your achievements
    </p>
  </div>

  <!-- Add Quest Form -->
  <div class="bg-white/80 rounded-2xl shadow-xl border border-gray-200/50 p-6 mb-8">
    <%= form_with(model: Quest.new, local: false, class: "space-y-4", id: "quest-form", html: { "data-testid": "Quest-form" }) do |form| %>
      <div class="space-y-2">
        <div class="flex gap-3">
          <%= form.text_field :name, 
              placeholder: "What's your next quest?", 
              class: "flex-1 px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white/60",
              "data-testid": "quest-input",
              required: true %>
          <%= form.submit "Add Quest", 
              class: "px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-4 focus:ring-blue-300 cursor-pointer flex items-center", 
              "data-testid": "add-quest-btn" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add Quest
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Quests List -->
  <div id="quests" class="space-y-4">
    <%= render partial: "quest", collection: @quests, as: :quest %>
  </div>

</div>
