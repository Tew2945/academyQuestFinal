<% content_for :title, "Quests" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tew's Quests</h1>
  </div>

  <div class="mb-6 bg-gray-50 p-4 rounded-lg">
    <%= form_with(model: Quest.new, local: false, class: "flex gap-3", html: { "data-testid": "Quest-form" }) do |form| %>
      <div class="flex-1">
        <%= form.text_field :name, 
            placeholder: "Add a new Quests...", 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            "data-testid": "quest-input",
            required: true %>
      </div>
      <%= form.submit "Add Quest", 
          class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors cursor-pointer",
          "data-testid": "add-quest-btn" %>
    <% end %>
  </div>

  <div id="quests" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @quests.any? %>
      <% @quests.each do |quest| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render quest %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No quests found.</p>
    <% end %>
  </div>

  <div class="flex gap-4 mt-8">
    <%= link_to "My Brags", brag_path, class: "bg-blue-700 hover:bg-blue-800 text-white font-semibold py-2 px-6 rounded-lg transition" %>
  </div>
</div>
