<!-- Main content container -->
<div class="min-h-screen bg-blue-50 p-4 md:p-8">
  <% content_for :title, "My Goals" %>
  
  <div class="max-w-6xl mx-auto space-y-8">
    
    <!-- Header Section -->
    <div class="text-center space-y-4">
      <h1 class="text-3xl md:text-5xl font-bold bg-gradient-to-r from-gray-800 to-blue-600 bg-clip-text text-transparent">
        My 2025 Goals
      </h1>
      <p class="text-gray-600 text-lg max-w-2xl mx-auto">
        Tracking my journey towards personal and professional growth
      </p>
    </div>

    <!-- Back Button -->
    <div class="flex justify-center">
      <%= link_to root_path, 
          class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl focus:outline-none focus:ring-4 focus:ring-gray-300", 
          "data-testid": "back-to-todos-btn" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Quest page
      <% end %>
    </div>

    <!-- Main Content Grid -->
    <div class="grid lg:grid-cols-3 gap-8">
      
      <!-- Intro Card -->
      <div class="lg:col-span-1" data-testid="intro-card">
        <div class="bg-white/80 rounded-2xl shadow-xl border border-gray-200/50 overflow-hidden">
          <div class="bg-gradient-to-br from-blue-500 to-indigo-600 p-6 text-white text-center">
            <div class="w-20 h-20 mx-auto mb-4 rounded-full overflow-hidden ring-4 ring-white/20">
              <%= image_tag "IMG_1452.JPG", class: "w-full h-full object-cover object-center" %>
            </div>
            <h2 class="text-xl font-bold">Teeratorn Thiengtham</h2>
            <p class="text-blue-100 text-sm">(Tew)</p>
          </div>
          <div class="p-6">
            <p class="text-gray-600 text-sm leading-relaxed">
              This page showcases my 2025 goals and achievements. Here you can see my professional development targets and language learning objectives for the year.
            </p>
          </div>
        </div>
      </div>

      <!-- Goals Section -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Professional Development -->
        <div class="bg-white/80 rounded-2xl shadow-xl border border-gray-200/50 overflow-hidden" data-testid="goal-section">
          <div class="bg-gradient-to-r from-green-500 to-emerald-600 p-6">
            <h2 class="text-xl md:text-2xl font-bold text-white flex items-center">
              <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6"></path>
              </svg>
              Professional Development
            </h2>
          </div>
          <div class="p-6 space-y-4">
            <div class="flex items-start space-x-4 p-4 bg-white/60 rounded-xl border border-green-200/50" data-testid="goal-item">
              <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-green-500 to-emerald-600 rounded-full flex items-center justify-center shadow-lg">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <p class="text-gray-700 leading-relaxed">
                Teach and implement Scrum methodology correctly in university graduation projects, being able to answer any questions from peers
              </p>
            </div>
            
            <div class="flex items-start space-x-4 p-4 bg-white/60 rounded-xl border border-green-200/50" data-testid="goal-item">
              <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-green-500 to-emerald-600 rounded-full flex items-center justify-center shadow-lg">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <p class="text-gray-700 leading-relaxed">
                Learn Kubernetes (K8s) and successfully deploy at least one website
              </p>
            </div>
          </div>
        </div>

        <!-- Language & Communication -->
        <div class="bg-white/80 rounded-2xl shadow-xl border border-gray-200/50 overflow-hidden" data-testid="goal-section">
          <div class="bg-gradient-to-r from-purple-500 to-pink-600 p-6">
            <h2 class="text-xl md:text-2xl font-bold text-white flex items-center">
              <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
              </svg>
              Language & Communication
            </h2>
          </div>
          <div class="p-6 space-y-4">
            <div class="flex items-start space-x-4 p-4 bg-white/60 rounded-xl border border-purple-200/50" data-testid="goal-item">
              <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-purple-500 to-pink-600 rounded-full flex items-center justify-center shadow-lg">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <p class="text-gray-700 leading-relaxed">
                Achieve a TOEIC score of 650 or higher
              </p>
            </div>
            
            <div class="flex items-start space-x-4 p-4 bg-white/60 rounded-xl border border-purple-200/50" data-testid="goal-item">
              <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-purple-500 to-pink-600 rounded-full flex items-center justify-center shadow-lg">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <p class="text-gray-700 leading-relaxed">
                Write at least one article in English on Medium to practice writing skills
              </p>
            </div>
          </div>
        </div>
        
      </div>
    </div>
 

  </div>
</div>