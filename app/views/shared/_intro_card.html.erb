<div class="flex flex-col sm:flex-row items-center sm:items-start bg-white rounded-lg shadow-sm p-6 mb-8 w-full">
  <div class="flex-shrink-0">
    <%= image_tag image_url, class: "w-24 h-24 sm:w-28 sm:h-28 rounded-lg object-cover object-center mb-4 sm:mb-0" %>
  </div>
  <div class="sm:ml-6 flex flex-col items-center sm:items-start text-center sm:text-left">
    <h2 class="text-2xl font-bold"><%= name %> <span class="text-gray-500 font-semibold">(<%= nickname %>)</span></h2>
    <p class="text-gray-600 mt-2"><%= desc %></p>
  </div>
</div>